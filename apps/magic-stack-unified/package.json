{
  "name": "magic-stack-unified",
  "version": "2.0.0",
  "description": "Magic Stack Unified - Editor = Game = Same Code",
  "type": "module",
  "scripts": {
    "dev": "vite --port 4200",
    "dev:edit": "vite --port 4200 --mode edit",
    "dev:play": "vite --port 4200 --mode play",
    "dev:test": "vite --port 4200 --mode test",
    "build": "tsc && vite build",
    "build:editor": "tsc && vite build --mode editor",
    "build:game": "tsc && vite build --mode game",
    "preview": "vite preview",
    "test": "vitest",
    "lint": "eslint src --ext ts,tsx"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zustand": "^4.4.0",
    "zod": "^3.22.0",
    "ulid": "^2.3.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.2.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  }
}
