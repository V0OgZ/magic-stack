{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "id",
    "slug",
    "name",
    "faction",
    "stats"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^01[A-Z0-9]{24}$"
    },
    "slug": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$"
    },
    "name": {
      "type": "string"
    },
    "faction": {
      "type": "string"
    },
    "stats": {
      "type": "object",
      "properties": {
        "health": {
          "type": "number"
        },
        "mana": {
          "type": "number"
        },
        "speed": {
          "type": "number"
        }
      }
    }
  }
}